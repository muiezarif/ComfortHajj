<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="124dip" />
            <stroke android:width="1dip" android:color="#47484C" />
            <gradient android:angle="-90" android:startColor="#47484C" android:endColor="#47484C"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="124dip" />
            <stroke android:width="1dip" android:color="#47484C" />
            <solid android:color="#47484C"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="124dip" />
            <stroke android:width="1dip" android:color="#47484C" />
            <gradient android:angle="-90" android:startColor="#47484C" android:endColor="#47484C" />
        </shape>
    </item>
</selector>