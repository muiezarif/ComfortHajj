<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutmessageee"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sender_message_textt"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/receiver_message_layout"
        android:padding="10dp"
        android:textSize="14sp"
        android:text="receiver message"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/sender_message_textt"
        android:background="@drawable/sender_message_layout"
        android:text="sender message"
        android:textSize="14sp"
        android:padding="10dp"/>

</RelativeLayout>